<%- include ('./partials/header.ejs') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-auto" style="margin: 5rem;">
      <h1 class="text-center"><span class="oi oi-account-login"></span> Login</h1>
      <%- include ('./partials/messages.ejs') %>
      <form action="/user/login" method="POST">
        <div class="form-group" style="margin: 10px">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Inserisci Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group" style="margin: 10px">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Inserisci Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>

        <div class="col text-center" style="margin: 20px">
          <button type="submit" class="btn btn-primary">Login</button>
        </div>
      </form>
      <p>Non hai un account? <a href="/user/register">Registrati</a></p>
    </div>
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
