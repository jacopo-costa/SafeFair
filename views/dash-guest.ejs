<%- include ('./partials/header.ejs') %>

<div class="m2"><%- include ('./partials/messages.ejs') %></div>

<div class="logout">
  <a href="/user/logout" class="btn btn-danger">Logout</a>
</div>

<h1 class="text-center mb-4">
  <span class="oi oi-home"></span> Benvenuto <%= utente.nome %>!
</h1>

<div class="col m-2">
  <ul class="nav nav-pills nav-justified" id="pills-tab" role="tablist">
    <li class="nav-item" role="presentation">
      <button
        class="nav-link active"
        id="iscrizioni"
        data-bs-toggle="pill"
        data-bs-target="#pills-iscrizioni"
        type="button"
        role="tab"
        aria-controls="pills-iscrizioni"
        aria-selected="true"
      >
        Iscrizioni
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button
        class="nav-link"
        id="nearme"
        data-bs-toggle="pill"
        data-bs-target="#pills-nearme"
        type="button"
        role="tab"
        aria-controls="pills-nearme"
        aria-selected="false"
      >
        Vicine a me
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button
        class="nav-link"
        id="prenotazioni"
        data-bs-toggle="pill"
        data-bs-target="#pills-prenotazioni"
        type="button"
        role="tab"
        aria-controls="pills-prenotazioni"
        aria-selected="false"
      >
        Prenotazioni
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button
        class="nav-link"
        id="modifica"
        data-bs-toggle="pill"
        data-bs-target="#pills-modifica"
        type="button"
        role="tab"
        aria-controls="pills-modifica"
        aria-selected="false"
      >
        Modifica
      </button>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div
      class="tab-pane fade show active"
      id="pills-iscrizioni"
      role="tabpanel"
      aria-labelledby="iscrizioni"
    >
      <div class="container">
        <div class="row justify-content-center row-cols-1 row-cols-md-2">
          <% for( const fiera of subscribed ) { %>
          <div class="col fiera-card">
            <div class="card mt-1">
              <% switch (fiera.tag) { case 'Fumetto': %>
              <div
                class="card-header fumetto"
              >
                <%= fiera.tag %>
              </div>
              <% break; case 'Artigianato': %>
              <div
                class="card-header artigianato"
              >
                <%= fiera.tag %>
              </div>
              <% break; case 'Nautica': %>
              <div
                class="card-header nautica"
              >
                <%= fiera.tag %>
              </div>
              <% break; case 'Cucina': %>
              <div
                class="card-header cucina"
              >
                <%= fiera.tag %>
              </div>
              <% break; case 'Agricoltura': %>
              <div
                class="card-header agricoltura"
              >
                <%= fiera.tag %>
              </div>
              <% break; case 'Tecnologia': %>
              <div
                class="card-header tecnologia"
              >
                <%= fiera.tag %>
              </div>
              <% break; } %>

              <img
                class="card-img-top photo"
                src="/images/fiere/<%= fiera.nome %>/1.jpg"
                alt="<%= fiera.nome %>"
              />
              <div class="card-body">
                <h5 class="card-title"><%= fiera.nome %></h5>
                <p
                  class="card-text"
                >
                  <%= fiera.descrizione %>
                </p>
                <a href="/fiera/<%= fiera.id %>" class="btn btn-primary"
                  >Vai alla fiera</a
                >
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <div
      class="tab-pane fade"
      id="pills-nearme"
      role="tabpanel"
      aria-labelledby="nearme"
    >
      <div class="container">
        <div class="row justify-content-center row-cols-1 row-cols-md-2">
          <% for( const near of nearme ) { %>
          <div class="col fiera-card">
            <div class="card mt-1">
              <% switch (near.tag) { case 'Fumetto': %>
              <div
                class="card-header fumetto"
              >
                <%= near.tag %>
              </div>
              <% break; case 'Artigianato': %>
              <div
                class="card-header artigianato"
              >
                <%= near.tag %>
              </div>
              <% break; case 'Nautica': %>
              <div
                class="card-header nautica"
              >
                <%= near.tag %>
              </div>
              <% break; case 'Cucina': %>
              <div
                class="card-header cucina""
              >
                <%= near.tag %>
              </div>
              <% break; case 'Agricoltura': %>
              <div
                class="card-header agricoltura"
              >
                <%= near.tag %>
              </div>
              <% break; case 'Tecnologia': %>
              <div
                class="card-header tecnologia"
              >
                <%= near.tag %>
              </div>
              <% break; } %>

              <img
                class="card-img-top photo"
                src="/images/fiere/<%= near.nome %>/1.jpg"
                alt="<%= near.nome %>"
              />
              <div class="card-body">
                <h5 class="card-title"><%= near.nome %></h5>
                <p
                  class="card-text"
                >
                  <%= near.descrizione %>
                </p>
                <a href="/fiera/<%= near.id %>" class="btn btn-primary"
                  >Vai alla fiera</a
                >
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>

    <div
      class="tab-pane fade m1"
      id="pills-prenotazioni"
      role="tabpanel"
      aria-labelledby="prenotazioni"
    >
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Fiera</th>
            <th scope="col">Data</th>
            <th scope="col">Codice QR</th>
            <th scope="col">Elimina</th>
          </tr>
        </thead>
        <tbody>
          <% var i = 1; for( const pren of prenotazioni ) { for(const fiera of
          fiere) { if(pren.idFiera == fiera.id) { %>
          <tr>
            <th scope="row"><%= i %></th>
            <td><%= fiera.nome %></td>
            <td><%= fiera.dataInizio %> - <%= fiera.dataFine %></td>
            <td>
              <form action="/dashboard/showQR" method="POST">
                <button
                  class="btn btn-success"
                  name="pren"
                  value="<%= pren.idPrenotazione %>"
                  type="submit"
                >
                  Visualizza QR
                </button>
              </form>
            </td>
            <td>
              <a href="/fiera/elimina/<%= fiera.id %>" class="btn btn-danger"
                ><span class="oi oi-x"></span></a>
            </td>
          </tr>
          <% i ++; } } } %>
        </tbody>
      </table>
    </div>

    <div
      class="tab-pane fade"
      id="pills-modifica"
      role="tabpanel"
      aria-labelledby="modifica"
    >
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-auto m2">
            <h1 class="text-center">
              <span class="oi oi-pencil"></span> Modifica
            </h1>
            <form action="/user/changePos" method="POST">
              <div class="form-group">
                <label for="posizione">Cambia la posizione</label>
                <input
                  type="text"
                  id="pos"
                  name="pos"
                  class="form-control"
                  placeholder="Inserisci una cittÃ "
                  value="<%= typeof pos != 'undefined' ? pos : '' %>"
                />
              </div>
              <div class="mt-1 row justify-content-center">
                <button type="submit" class="btn btn-primary center-button">Invia</button>
              </div>
            </form>

            <form action="/user/changeTags" method="POST">
              <fieldset class="form-group">
                <legend class="mt-4">Cambia i tags iscritti</legend>
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Fumetto"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault"
                    >Fumetto
                  </label>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Artigianato"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Artigianato
                  </label>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Nautica"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Nautica
                  </label>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Cucina"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Cucina
                  </label>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Agricoltura"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Agricoltura
                  </label>
                </div>

                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    name="Tecnologia"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    Tecnologia
                  </label>
                </div>
              </fieldset>
              <div class="mt-1 row justify-content-center">
                <button type="submit" class="btn btn-primary center-button">Invia</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
