<%- include ('./partials/header.ejs') %>

<div class="container">
  <div class="row justify-content-center">
    <h1 class="text-center" style="margin: 1rem">
      <strong><%= fiera.nome %></strong>
    </h1>
    <div
      id="myCarousel"
      class="carousel slide text-center"
      data-ride="carousel"
    >
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img
            class="d-block w-100"
            style="object-fit: cover; height: 35rem;"
            src="/images/fiere/<%= fiera.nome %>/1.jpg"
            alt="First slide"
          />
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100"
            style="object-fit: cover; height: 35rem;"
            src="/images/fiere/<%= fiera.nome %>/2.jpg"
            alt="Second slide"
          />
        </div>
        <div class="carousel-item">
          <img
            class="d-block w-100"
            style="object-fit: cover; height: 35rem;"
            src="/images/fiere/<%= fiera.nome %>/3.jpg"
            alt="Third slide"
          />
        </div>
      </div>
    </div>
  </div>

  <h3 style="margin-bottom: 2rem; margin-top: 2rem">Descrizione:</h3>
  <p><%= fiera.descrizione %></p>

  <div class="row justify-content-start">
    <div class="col-sm-auto align-self-center">
      <h5>Data inizio:</h5>
    </div>
    <div class="col-sm-auto align-self-center">
      <p><%= fiera.dataInizio %></p>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-sm-auto align-self-center">
      <h5>Data fine:</h5>
    </div>
    <div class="col-sm-auto align-self-center">
      <p><%= fiera.dataFine %></p>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-sm-auto align-self-center">
      <h5>Posizione:</h5>
    </div>
    <div class="col-sm-auto align-self-center">
      <p><%= fiera.posizione %></p>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-sm-auto align-self-center">
      <h5>Posti totali:</h5>
    </div>
    <div class="col-sm-auto align-self-center">
      <p><%= fiera.postiTotali %></p>
    </div>
  </div>

  <div class="row justify-content-start">
    <div class="col-sm-auto my-auto">
      <h5>Posti rimanenti:</h5>
    </div>
    <div class="col-sm-auto align-self-center">
      <p><%= fiera.postiRimanenti %></p>
    </div>
    <div class="col-sm-auto align-self-center">
      <% if(fiera.postiRimanenti === 0) { %>
      <button type="button" class="btn btn-danger">Posti esauriti</button>
      <% } else { %>
      <a href="/fiera/prenota/<%= fiera.id %>" class="btn btn-success"
        >Prenota!</a
      >
      <% } %>
    </div>
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
