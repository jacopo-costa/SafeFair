<%- include ('./partials/header.ejs') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-auto">
      <h2 class="text-center"><%= fiera.nome %></h2>
      <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img
              class="d-block"
              src="/images/fiere/<%= fiera.nome %>/1.jpg"
              alt="First slide"
              style="width: 30rem; height: 30rem"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block"
              src="/images/fiere/<%= fiera.nome %>/2.jpg"
              alt="Second slide"
              style="width: 30rem; height: 30rem"
            />
          </div>
          <div class="carousel-item">
            <img
              class="d-block"
              src="/images/fiere/<%= fiera.nome %>/3.jpg"
              alt="Third slide"
              style="width: 30rem; height: 30rem"
            />
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-auto">
      <h1>Descrizione:</h1>
      <p><%= fiera.descrizione %></p>
      <h1>Posti totali:</h1>
      <h3><%= fiera.postiTotali %></h3>
      <h1>Posti rimanenti:</h1>
      <h3><%= fiera.postiRimanenti %></h3>
      <% if(fiera.postiRimanenti === 0) { %>
      <button type="button" class="btn btn-danger">Posti esauriti</button>
      <% } else { %>
      <a href="/fiera/prenota/<%= fiera.id %>" class="btn btn-success"
        >Prenota!</a
      >
      <% } %>
    </div>
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
