<%- include ('./partials/header.ejs') %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4" style="margin: 5rem">
      <h1 class="text-center mb-3">
        <span class="oi oi-key"></span> Registrati
      </h1>
      <%- include ('./partials/messages.ejs') %>
      <form action="/user/register" method="POST">
        <div class="form-group" style="margin: 10px">
          <label for="nome">Username</label>
          <input
            type="nome"
            id="nome"
            name="nome"
            class="form-control"
            placeholder="Inserisci Username"
            value="<%= typeof nome != 'undefined' ? nome : '' %>"
          />
        </div>
        <div class="form-group" style="margin: 10px">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Inserisci Email"
            value="<%= typeof email != 'undefined' ? email : '' %>"
          />
        </div>
        <div class="form-group" style="margin: 10px">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Inserisci Password"
            value="<%= typeof password != 'undefined' ? password : '' %>"
          />
        </div>
        <div class="form-group" style="margin: 10px">
          <label for="password2">Conferma Password</label>
          <input
            type="password"
            id="password2"
            name="password2"
            class="form-control"
            placeholder="Conferma Password"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
          />
        </div>
        <div class="form-group" style="margin: 10px">
          <label for="posizione">Posizione</label>
          <input
            type="text"
            id="posizione"
            name="posizione"
            class="form-control"
            placeholder="Inserisci una cittÃ "
            value="<%= typeof posizione != 'undefined' ? posizione : '' %>"
          />
        </div>

        <fieldset class="form-group">
          <div class="form-check" style="margin-top: 20px">
            <input
              class="form-check-input"
              type="checkbox"
              name="tipo"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Sono un venditore
            </label>
          </div>
        </fieldset>

        <fieldset class="form-group">
          <legend class="mt-4">Tags</legend>
          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Fumetto"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Fumetto
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Artigianato"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Artigianato
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Nautica"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Nautica
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Cucina"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Cucina
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Agricoltura"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Agricoltura
            </label>
          </div>

          <div class="form-check">
            <input
              class="form-check-input"
              type="checkbox"
              name="Tecnologia"
              id="flexCheckDefault"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Tecnologia
            </label>
          </div>
        </fieldset>
        <div style="margin-top: 20px">
          <button type="submit" class="btn btn-primary">Invia</button>
        </div>
      </form>
      <p>Hai un account? <a href="/user/login">Login</a></p>
    </div>
  </div>
</div>

<%- include ('./partials/footer.ejs') %>
